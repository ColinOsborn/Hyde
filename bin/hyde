#!/usr/bin/env ruby
require "pry"
require_relative "../lib/hyde"
require_relative "../lib/file_manager"

function = ARGV[0]
filepath = ARGV[1]

filemanager = FileManager.new

if filepath == nil
  puts "Missing Input Error. No filepath given"
else
  case function
  when nil
    puts "Missing Input Error. No function call given"
  when "new"
    filemanager.create_new_site_structure(filepath)
  when "build"
      builder = Build.new
      builder.build(filepath)
  end
end
